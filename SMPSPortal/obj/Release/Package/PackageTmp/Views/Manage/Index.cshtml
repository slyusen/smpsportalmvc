@model SmpsPortal.Core.ViewModels.IndexViewModel
@using Syncfusion.JavaScript
@using Syncfusion.JavaScript.Models
@using Syncfusion.MVC.EJ
@{
    ViewBag.Title = Model.Heading;
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Edit Profile</h4>
                    </div>
                    <div class="content">
                        <span class="text-info text-success" >@ViewBag.StatusMessage</span>
                       @using (Html.BeginForm("Index", "Manage", FormMethod.Post))
                       {
                        @Html.AntiForgeryToken()
                            <div class="row">
                                <div class="col-md-5">
                                    <div class="form-group">
                                        <label>Phone Number</label>
                                        @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", autofocus = "autofocus" })
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label>Username</label>
                                       @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", autofocus = "autofocus" })
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Email address</label>
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", autofocus = "autofocus", disabled = "disabled" })
                                        @Html.HiddenFor(m => m.Email);
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>First Name</label>
                                      @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", autofocus = "autofocus" })
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Last Name</label>
                                       @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", autofocus = "autofocus" })
                                        @Html.HiddenFor(m => m.ProfileImageUrl);
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-9">
                                    <div class="form-group">
                                        <label>Address</label>
                                        @Html.TextBoxFor(m => m.Address, new { @class = "form-control", autofocus = "autofocus" })
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label>Date of Birth</label>
                                        @Html.EJ().DatePickerFor(m => m.DateofBirth, new { @class = "form-control", autofocus = "autofocus" })
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>City</label>
                                        @Html.TextBoxFor(m => m.City, new { @class = "form-control", autofocus = "autofocus" })
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>State</label>
                                        @Html.TextBoxFor(m => m.State, new { @class = "form-control", autofocus = "autofocus" })
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Country</label>
                                        @Html.TextBoxFor(m => m.Country, new { @class = "form-control", autofocus = "autofocus" })
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>About Me</label>
                                        @Html.TextAreaFor(m => m.AboutMe, new { @class = "form-control", autofocus = "autofocus", rows = "5" })
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-info btn-fill pull-right">Update Profile</button>
                            <div class="clearfix"></div>
                       }
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card card-user">
                    <div class="image">
                        <img src="../Content/assets/img/books-magazines.jpg" alt="..." />
                    </div>
                    <div class="content">
                        <div class="author">
                            <a href="#">
                                <img class="avatar border-gray" src="../Images/Profile/@Model.ProfileImageUrl" alt="..." />
                                <h4 class="title">
                                    @Model.FirstName  @Model.LastName <br />
                                    <small>@Model.UserName</small>
                                </h4>
                            </a>
                        </div>
                        <p class="description text-center">
                           @Model.AboutMe
                        </p>
                        <p class="text-center">
                            [
                            @if (Model.HasPassword)
                            {
                                @Html.ActionLink("Change your password", "ChangePassword")
                            }
                            else
                            {
                                @Html.ActionLink("Create", "SetPassword")
                            }
                            ]
                            <br />
                            @Html.EJ().Uploadbox("UploadDefault").SaveUrl(@Url.Action("SaveDefault")).RemoveUrl(@Url.Action("RemoveDefault")).FileSize(1000000).CssClass("upBoxAlign").UploadBoxButtonText(t => t.Browse("Change Image")).ExtensionsAllow(".jpg,.png").MultipleFilesSelection(false)
                        </p>
                    </div>
                    <hr>
                    <div class="text-center">
                        <button href="#" class="btn btn-simple"><i class="fa fa-facebook-square"></i></button>
                        <button href="#" class="btn btn-simple"><i class="fa fa-twitter"></i></button>
                        <button href="#" class="btn btn-simple"><i class="fa fa-google-plus-square"></i></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





@section scripts{
<script type="text/javascript">

    $('.datepicker').datepicker({
        weekStart: 1
    });

    </script>

  

}