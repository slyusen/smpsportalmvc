@model  SmpsPortal.Core.ViewModels.DesignationViewModel
@using SmpsPortal.Core.Models
@using Syncfusion.JavaScript
@using Syncfusion.JavaScript.Models
@using Syncfusion.MVC.EJ
@{
    ViewBag.Title = Model.Heading;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container body-content">
    <div class="row">
     

        <div class="col-md-12">
            @Html.ActionLink("Add New", "Create", "Designations", new { @class = "btn btn-info" })
            <p></p>
            <div class="panel panel-default pan2">
                <!-- Default panel contents -->
                <div class="panel-heading">@Model.Heading</div>

                <div>

                    @(Html.EJ().Grid<Designation>("Grid1")
                            .Datasource((IEnumerable<object>)ViewBag.datasource)
                            .AllowPaging()

                          .Columns(col =>
                          {
                              col.HeaderText("Action").Template(true).Template("#columnTemplate").TextAlign(TextAlign.Center).Width(110).Add();
                              col.Field("Id").HeaderText("Id").IsPrimaryKey(true).Visible(false).AllowEditing(false).TextAlign(TextAlign.Right).ValidationRules(v => v.AddRule("required", true).AddRule("number", true)).Width(20).Add();
                              col.Field("Title").HeaderText("Title").Width(80).Add();
                              col.Field("DepartmentTitle").HeaderText("DepartmentTitle").Width(120).Add();

                          })
                    )

                </div>


            </div>


        </div>

    </div>
</div>



@section scripts{

    <script type="text/x-jsrender" id="columnTemplate">
        <a href="Designations/Edit/{{:Id}}"> Edit </a>
    </script>


}
