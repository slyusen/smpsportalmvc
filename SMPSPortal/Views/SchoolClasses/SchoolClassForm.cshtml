@model SmpsPortal.Core.ViewModels.SchoolClassesViewModel
@{
    ViewBag.Title = Model.Heading;
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container body-content">
    <div class="row">
      
        <div class="col-md-12">
            <!--<button type="button" id="addBtn" class="btn btn-info"> Add </button>-->
            <p></p>
            <div class="panel panel-default pan2">
                <!-- Default panel contents -->
                <div class="panel-heading">@Model.Heading</div>

                <div style="padding: 10px 10px;">

                    @using (Html.BeginForm(Model.Action, "SchoolClasses"))
                    {

                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.Id)
                        <div class="form-group">
                            @Html.LabelFor(m => m.Code, "Class Code")
                            @Html.TextBoxFor(m => m.Code, new { @class = "form-control", autofocus = "autofocus" })
                            @Html.ValidationMessageFor(m => m.Code)

                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Description)
                            @Html.TextAreaFor(m => m.Description, new { @class = "form-control", autofocus = "autofocus" })
                            @Html.ValidationMessageFor(m => m.Description)

                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Capacity)
                            @Html.TextBoxFor(m => m.Capacity, new { @class = "form-control", autofocus = "autofocus" })
                            @Html.ValidationMessageFor(m => m.Capacity)

                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.NumberofElectives, "Number of Electives")
                            @Html.TextBoxFor(m => m.NumberofElectives, new { @class = "form-control", autofocus = "autofocus" })
                            @Html.ValidationMessageFor(m => m.NumberofElectives)

                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.ProgramId, "Program")
                            @Html.DropDownListFor(m => m.ProgramId, new SelectList(Model.ProgramList, "Id", "Name", 1), new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.ProgramId)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.GradeLevelId, "Grade Level")
                            @Html.DropDownListFor(m => m.GradeLevelId, new SelectList(Model.GradeLevelList, "Id", "Code", 1), new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.GradeLevelId)
                        </div>
                       
                        <button type="submit" class="btn btn-primary btn-md"> Save </button>
                    }

                </div>


            </div>


        </div>

    </div>
</div>



@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
