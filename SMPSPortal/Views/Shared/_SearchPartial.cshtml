

@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("Search", "Home", new { @class = "navbar-form navbar-left" }))
    {

        string searchTerm = (string)TempData["searchTerm"];
        <div class="input-group form-group srch">
            @Html.TextBox("searchTerm", searchTerm, new { @class = "searchTxt form-control ", @placeholder = "Search" })
            <span class="input-group-btn">
                <button type="submit" class="btn btn-default"> <span class="glyphicon glyphicon-search"></span></button>
            </span>
        </div>
    }
}

